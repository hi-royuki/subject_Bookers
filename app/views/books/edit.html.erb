<body>
<h1>Editing Book</h1>

<% if @book.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@book.errors.count, "error") %> prohibited this product from being saved:</h2>
      <ul>
        <% @book.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
<% end %>


<%= form_with model: @book, url:"/books/#{@book.id}", local:true do |f| %>
    <div class="filed">
      <label for="book_title">Title</label>
      <%= f.text_field :title %>
    </div>
    <div class="filed">
     <label for="book_body">Body</label>
     <%= f.text_area :body %>
    </div>
    <div class="push">
      <%= f.submit 'Update Book' %>
     </div>
     <%= link_to "Show", book_path(@book), class: "show_#{@book.id}" %>
     |
     <%= link_to "Back", books_path, class: "back" %>
<% end %>
</body>